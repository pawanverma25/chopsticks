<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent"
    tools:context=".playScreen">

    <ImageButton
        android:id="@+id/onepbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/hand1"
        android:contentDescription="@string/one_player"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/twopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:background="@drawable/hand2"
        android:contentDescription="@string/two_players"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/onepbutton"
        app:layout_constraintStart_toStartOf="@+id/onepbutton"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/txtV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_player"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blue_text"
        android:shadowDy="0.0"
        android:shadowDx="0.0"
        android:shadowRadius="16"
        android:shadowColor="@color/blue_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/onepbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_players"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blue_text"
        android:shadowDy="0.0"
        android:shadowDx="0.0"
        android:shadowRadius="16"
        android:shadowColor="@color/blue_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/twopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>